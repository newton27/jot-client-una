{
  "name": "@emoji-mart/monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspace emoji-mart build && yarn build:dataset",
    "build:dataset": "mkdirp ../emoji/data/set && cp -R ./packages/emoji-mart-data/i18n ../emoji/data/ && cp -R ./packages/emoji-mart-data/sets/14/* ../emoji/data/set/",
    "build:data": "yarn workspace @emoji-mart/data build",
    "clear": "rm -rf ../emoji ./packages/emoji-mart/node_modules ./packages/emoji-mart/.parcel-cache ./packages/emoji-mart/package-lock.json ./packages/emoji-mart/yarn.lock ./node_modules .parcel-cache package-lock.json yarn.lock",
    "check:types": "tsc",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "test": "jest"
  },
  "devDependencies": {
    "@babel/core": "7.18.9",
    "@babel/plugin-transform-modules-commonjs": "7.18.6",
    "@parcel/packager-ts": "2.6.2",
    "@parcel/transformer-inline-string": "2.6.2",
    "@parcel/transformer-sass": "2.6.2",
    "@parcel/transformer-typescript-types": "2.6.2",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "28.0.0",
    "parcel": "2.6.2",
    "prettier": "2.5.1",
    "ts-jest": "^28.0.7",
    "typescript": "4.6.4"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always"
  },
  "engines": {
    "yarn": ">=1"
  },
  "dependencies": {
    "mkdirp": "^3.0.1",
    "yarn": "^1.22.19"
  }
}
